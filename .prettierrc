{
    "plugins": [
        "prettier-plugin-go-template"
    ],
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "parser": "go-template",
                "tabWidth": 2,
                "singleQuote": true,
                "singleAttributePerLine": true
            }
        },
        {
            "files": [
                "*.css"
            ],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
